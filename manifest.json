{

    "manifest_version": 2,
    "name": "Start Fast Offer",
    "version": "1.0",

    "description": "",

    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },

    "permissions": [
        "tabs",
        "storage",
        "*://*.bey18ckvn0.execute-api.ca-central-1.amazonaws.com/*"
    ],

    "background": {
        "scripts": ["jquery.min.js", "background.js"]
    },

    "browser_action": {
        "default_title": "Start Fast Offer",
        "default_icon": "icons/icon.png",
        "default_popup": "popup/content.html"
    },

    "content_scripts": [
        {
            "matches": ["*://*.v3.torontomls.net/*", "*://*.app.realmmlp.ca/*", "*://*.matrix.itsorealestate.ca/*"], 
            "js": ["jquery.min.js", "main.js"]
        },
        {
            "matches": ["*://*.forms.ltd/*"],
            "js": ["jquery.min.js", "get_user_id.js"]
        }
    ],

    "web_accessible_resources": [
        "icons/icon.png"
    ]
}
